<Window x:Class="LANPlay_Client.WdMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANPlay_Client"
        mc:Ignorable="d"
        Title="WdClient" Height="450" Width="800" Loaded="Window_Loaded">
    <Canvas>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="40" Canvas.Top="48" >IP</TextBlock>
        <TextBox Name="TbIP"  HorizontalAlignment="Center" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Center" TextChanged="TbIP_TextChanged" Height="38" Width="110" Canvas.Left="71" Canvas.Top="37" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <CheckBox Name="CkbHook" Content="拦截键盘" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="58" Canvas.Top="222"  Click="CkbHook_Click"   ></CheckBox>
        <Button Name="BtnBlack" Height="57" Width="152" Canvas.Left="29" Canvas.Top="291" Click="BtnBlack_Click">黑屏</Button>
        <ListBox Name="LstInfo" Height="311" Canvas.Left="262" Canvas.Top="37" Width="472"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="40" Canvas.Top="114" ><Run Text="ID"/></TextBlock>
        <TextBox x:Name="TbID"  HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" TextChanged="TbID_TextChanged" Height="38" Width="110" Canvas.Left="71" Canvas.Top="103" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
    </Canvas>
</Window>
